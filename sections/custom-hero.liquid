{% schema %}
{
  "name": "Custom Hero",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Heading",
      "default": "Never Scoop Again."
    },
    {
      "type": "text",
      "id": "subtitle",
      "label": "Subheading",
      "default": "The Future of Cat Care."
    },
    {
      "type": "textarea",
      "id": "description",
      "label": "Description",
      "default": "The PurrfectClean Ultra automatically cleans, neutralizes odors, and tracks your cat's health."
    },
    {
      "type": "image_picker",
      "id": "hero_image",
      "label": "Hero Image"
    },
    {
      "type": "text",
      "id": "price",
      "label": "Price",
      "default": "499"
    }
  ],
  "presets": [
    {
      "name": "Custom Hero"
    }
  ]
}
{% endschema %}

<style>
  .custom-hero-section {
    padding: 4rem 1rem;
    max-width: 1280px;
    margin: 0 auto;
    display: flex;
    flex-direction: column;
    gap: 3rem;
  }
  
  @media (min-width: 1024px) {
    .custom-hero-section {
      flex-direction: row;
      align-items: center;
      padding: 6rem 2rem;
    }
  }

  .hero-content {
    flex: 1;
    text-align: center;
  }
  
  @media (min-width: 1024px) {
    .hero-content {
      text-align: left;
    }
  }

  .badge {
    display: inline-flex;
    align-items: center;
    background-color: #eff6ff;
    color: #2563eb;
    padding: 0.25rem 0.75rem;
    border-radius: 9999px;
    font-size: 0.875rem;
    font-weight: 500;
    margin-bottom: 1.5rem;
    border: 1px solid #dbeafe;
  }

  h1 {
    font-size: 2.5rem;
    font-weight: 800;
    line-height: 1.1;
    color: #111827;
    margin-bottom: 1rem;
  }

  h1 span {
    color: #2563eb; /* Brand Blue */
  }

  .hero-description {
    font-size: 1.125rem;
    color: #6b7280;
    margin-bottom: 2rem;
    line-height: 1.6;
  }

  .price-block {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 1rem;
    margin-top: 2rem;
  }

  @media (min-width: 640px) {
    .price-block {
      flex-direction: row;
      justify-content: center;
    }
  }
  
  @media (min-width: 1024px) {
    .price-block {
      justify-content: flex-start;
    }
  }

  .cta-button {
    background-color: #2563eb;
    color: white;
    padding: 1rem 2.5rem;
    border-radius: 9999px;
    font-weight: 500;
    font-size: 1.125rem;
    border: none;
    cursor: pointer;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    transition: transform 0.2s;
    text-decoration: none;
  }

  .cta-button:hover {
    background-color: #1d4ed8;
    transform: translateY(-2px);
  }

  .hero-image-container {
    flex: 1;
    position: relative;
  }

  .hero-image {
    width: 100%;
    border-radius: 1.5rem;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
  }
</style>

<div class="custom-hero-section">
  <div class="hero-content">
    <div class="badge">
      â˜… #1 Rated Smart Litter Box of 2026
    </div>
    
    <h1>
      {{ section.settings.title }} <br>
      <span>{{ section.settings.subtitle }}</span>
    </h1>
    
    <p class="hero-description">
      {{ section.settings.description }}
    </p>

    <div class="price-block">
      <a href="/products/purrfectclean-ultra" class="cta-button">
        Get Yours Now
      </a>
      <div style="text-align: left;">
        <div style="font-size: 1.5rem; font-weight: 700; color: #111827;">${{ section.settings.price }}</div>
        <div style="font-size: 0.875rem; color: #6b7280; text-decoration: line-through;">$699</div>
      </div>
    </div>
  </div>

  <div class="hero-image-container">
    {% if section.settings.hero_image %}
      {{ section.settings.hero_image | image_url: width: 800 | image_tag: class: 'hero-image', loading: 'eager' }}
    {% else %}
      {{ 'lifestyle-1' | placeholder_svg_tag: 'hero-image' }}
    {% endif %}
  </div>
</div>